<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] :: UserManagementSystem</title>
    <link rel="icon" href="~/icons/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/styles/main.css" rel="stylesheet" />
</head>
<body class="custom-body">
    <header class="custom-header shadow-sm">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="account" asp-action="login">
                    <img src="~/images/app-logo.png" width="50" height="50" title="UserManagmentSystem" alt="App logo">
                </a>
                <ul class="navbar-nav d-flex">
                    @if (Convert.ToString(ViewData["Title"]) == "Login")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="register">Register</a>
                        </li>
                    }
                    else if (Convert.ToString(ViewData["Title"]) == "Users")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">You are logged in as @User.Identity.Name</a>
                            <ul class="dropdown-menu text-center shadow-none">
                                <li>
                                    @using (Html.BeginForm("logout", "account", FormMethod.Post))
                                    {
                                        <input class="dropdown-item" type="submit" value="Log out">
                                    }
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="account" asp-action="login">Log in</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="page-footer custom-footer d-flex align-items-center justify-content-center text-muted shadow-sm">
        <div class="footer-copyright text-center">
            &copy; UserManagementSystem
            <br />
            Designed by Yaroslav Ryaguzov
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/scripts/main.js"></script>
</body>
</html>
